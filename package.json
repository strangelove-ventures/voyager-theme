{
  "name": "voyager-theme-monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "watch": "turbo watch",
    "next:dev": "turbo run dev --filter=next-app",
    "next-app": "pnpm --dir apps/next-app",
    "voyager-theme": "pnpm --dir packages/voyager-theme",
    "publish:theme": "pnpm publish --filter=@strangelove-ventures/voyager-theme --no-git-checks"
  },
  "devDependencies": {
    "@strangelove-ventures/style-guide": "^2.0.0",
    "@svgr/cli": "^7.0.0",
    "eslint": "^8.38.0",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "turbo": "^1.9.1",
    "typescript": "^5.0.4"
  },
  "prettier": "@strangelove-ventures/style-guide/prettier",
  "private": true
}
